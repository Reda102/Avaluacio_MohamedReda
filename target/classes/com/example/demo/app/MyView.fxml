<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="333.0" prefWidth="396.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <top>
        <VBox BorderPane.alignment="CENTER">
            <MenuBar prefHeight="58.0" prefWidth="335.0">
                <menus>
                    <Menu text="Gestion de ficheros" />
                </menus>
            </MenuBar>
            <ToolBar prefHeight="40.0" prefWidth="200.0">
                <items>
                    <TextArea fx:id="espText" prefHeight="200.0" prefWidth="298.0" text="Escribe un texto..." />
                </items>
            </ToolBar>
        </VBox>
    </top>

    <center>
        <VBox alignment="CENTER" prefHeight="0.0" prefWidth="348.0" spacing="10" />
    </center>

    <bottom>
        <ButtonBar prefHeight="81.0" prefWidth="0.0" BorderPane.alignment="CENTER">
            <buttons>
                <Button fx:id="btnDesa" mnemonicParsing="false" text="Desa" />
                <Button fx:id="btnAbrirFichero" text="Abrir Fichero" />
                <GridPane minWidth="59.0" prefHeight="0.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="72.0" minWidth="10.0" prefWidth="42.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                </GridPane>
            </buttons>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </ButtonBar>
    </bottom>

</BorderPane>